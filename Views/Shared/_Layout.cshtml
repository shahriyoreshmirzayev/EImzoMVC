<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-IMZO Tizimi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Signature" asp-action="Index">
                    <i class="bi bi-shield-check"></i> E-IMZO Tizimi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index">
                                <i class="bi bi-house"></i> Bosh sahifa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Sign">
                                <i class="bi bi-pen"></i> Imzolash
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Verify">
                                <i class="bi bi-check-circle"></i> Tekshirish
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Certificates">
                                <i class="bi bi-key"></i> Sertifikatlar
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2024 - E-IMZO Tizimi - ASP.NET Core MVC
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>