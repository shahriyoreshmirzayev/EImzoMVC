@model EImzoMVC.Models.CertificateListViewModel
@{
    ViewData["Title"] = "O'rnatilgan Sertifikatlar";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3><i class="bi bi-key-fill"></i> O'rnatilgan Sertifikatlar</h3>
                </div>
                <div class="card-body">
                    @if (Model.Certificates != null && Model.Certificates.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Egasi</th>
                                        <th>Kim tomonidan</th>
                                        <th>Amal qilish</th>
                                        <th>Status</th>
                                        <th>Seriya</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cert in Model.Certificates)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@cert.SubjectName</strong>
                                            </td>
                                            <td>@cert.IssuerName</td>
                                            <td>
                                                <small>
                                                    @cert.ValidFrom.ToString("dd.MM.yyyy")<br />
                                                    @cert.ValidTo.ToString("dd.MM.yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                @if (cert.IsValid)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Amal qiladi
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> Muddati o'tgan
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted font-monospace">
                                                    @cert.SerialNumber
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Tizimda hech qanday sertifikat topilmadi.
                        </div>
                    }

                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Orqaga
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>