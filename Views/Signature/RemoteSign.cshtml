@{
    ViewData["Title"] = "Remote E-Imzo Sign";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white">Remote E-Imzo</div>
                <div class="card-body">
                    <p>Challenge: <strong>@ViewBag.Challenge</strong></p>
                    <p>Follow your external signing tool to sign the challenge and paste returned signed data below.</p>

                    <form asp-action="RemoteSignResult" method="post">
                        <div class="mb-3">
                            <label for="signData">Signed data (base64 or hex)</label>
                            <textarea class="form-control" id="signData" name="signData" rows="6"></textarea>
                        </div>
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
